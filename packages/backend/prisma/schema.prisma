// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

  // For some reason Prisma is not able to load this variable
  // url      = env("DATABASE_URL")
  url = "postgresql://postgres:postgres@localhost:5432/ticket-app?schema=public"
}

model User {
  id String @default(uuid()) @id

  firstName String?
  lastName String?

  email String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
